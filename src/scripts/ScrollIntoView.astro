<script>
  function addEventListeners() {
    const li = document.querySelectorAll(".navbar li");
    li.forEach((li) => {
      li.addEventListener("click", () => {
        document
          .querySelector(`.${li.getAttribute("data-scroll")}`)
          ?.scrollIntoView({ behavior: "smooth" });
      });
    });
  }

  addEventListeners();
</script>
